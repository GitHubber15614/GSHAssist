<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hawk.gshassist.ui.fragment.CurrentBorrowFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/fhbow_lastpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="next page"/>
        <TextView
            android:id="@+id/fhbow_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="page"/>
        <Button
            android:id="@+id/fhbow_nextpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="next page"/>
    </FrameLayout>
    <TextView
        android:id="@+id/fcbow_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:text="当前没有借阅书籍"
        android:visibility="gone"/>
    <ListView
        android:id="@+id/fcbow_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
